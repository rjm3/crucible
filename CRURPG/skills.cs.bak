function WhatIsDepend(%clientId,%item)
{
	%new = "";
	%num = $dependmsg[%item,0];
	%msg = "<f1> Skill - " @ $SkillDesc[%num] @ "\n\n ";
	%ds = $SkillDependancy[%num];
	for (%i = 0; (%a = getWord(%ds,%i)) != -1; %i+=2) {
		%v = getWord(%ds,%i+1);
		if (%a == "Strength")
			%msg = %msg @ "<f2>" @ string::translate(%a @ " " @ %v @ "% ");
		if (%a == "Dexterity")
			%msg = %msg @ "<f0>" @ string::translate(%a @ " " @ %v @ "% ");
		if (%a == "Intelligence")
			%msg = %msg @ "<f1>" @ string::translate(%a @ " " @ %v @ "% ");
	}
	%msg = %msg @ "\n\n<f0> " @ $dependmsg[%item,1];
	return %msg;
}


function GetNumSkills()
{
	dbecho($dbechoMode, "GetNumSkills()");

	return 51;

	for(%i = 1; $SkillDesc[%i] != ""; %i++){}
	return %i-1;
}


function AddSkillPoint(%clientId,%skill,%delta)
{
	%delta = 1;
	%cur = $PlayerSkill[%clientId,%skill];
	%multi = GetSkillMultiplier(%clientId, %skill);
	if (%cur >= (fetchData(%clientId,"LVL") * 10)) {
		Client::SendMessage(%clientId,0,"You have reached the maximum allowed " @ $SkillDesc[%skill] @ " points for your level.");
		return;
	}
	$PlayerSkill[%clientId,%skill] += %multi;
	return True;
}

$ExpBonus = 1;

function GetDependancyAdd(%id,%skill)
{
	//echo(" GET DEPENDANCE ADD " @ %skill);
	%total = 0;
	%ds = $SkillDependancy[%skill];
	for (%i = 0; (%a = getWord(%ds,%i)) != -1; %i+=2) {
		%v = getWord(%ds,%i+1);
		%abilnum = $DependToNum[%a];
		%pa = GetPlayerAbility(%id,%a) + $SkillBonus[%id,%abilnum];
		%total += (%pa * (%v / 100));
	}
	return floor(%total / 10);
}

